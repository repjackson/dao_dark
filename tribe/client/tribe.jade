template(name='tribe_layout')
    .layout.context
        +tribe_topnav
        .ui.bottom.attached.basic.segment.pushable
            +tribe_topbar
            +tribe_leftbar
            +tribe_rightbar
            .pusher
                #main
                    +yield
        +tribe_footer






template(name='tribe_home')
    .ui.padded.stackable.grid
        .centered.row
            .two.wide.column
                a.ui.icon.button(href="/s/tribe/#{tribe._id}/edit")
                    i.cog.icon
            .ten.wide.column
                img.ui.large.inline.image(src="{{c.url tribe.logo_id height=400 crop='limit'}}")
                .ui.center.aligned.large.header #{current_tribe.title}
                .ui.center.aligned.small.header #{current_tribe.subtitle}
        .centered.row
            .eight.wide.column
                .ui.header
                    i.users.icon 
                    |Users
            .eight.wide.column
                .ui.header
                    i.clone.icon 
                    |Pages
            
            


template(name='tribe_footer')
    .ui.inverted.attached.menu(style="background:#{tribe.secondary_color}")
        .item
            i.copyright.outline.icon
            |#{tribe.title}
