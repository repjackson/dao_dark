head
    title dao
    meta(name='viewport', content='user-scalable=no, initial-scale=1.0, maximum-scale=1.0, width=device-width')
    meta(name="theme-color", content="#000")
    link(href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet")
    meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")


body
    +layout


template(name='nav')
    .ui.attached.large.menu
        .header.item.delta.pointer(title='home')
            i.home.icon
        .icon.item.pointer.users(title='users')
            i.users.icon
        .icon.item.pointer.tribes(title='tribes')
            i.fire.icon
        .icon.item.pointer.blog(title='blog')
            i.newspaper.icon
        .icon.item.pointer.leaderboard(title='leaderboard')
            i.trophy.icon
        .icon.item.pointer.shop(title='shop')
            i.shopping.bag.icon
        .right.menu
            if currentUser
                .item.pointer.mail
                    i.mail.icon
                    if messages
                        |#{messages.count}
                .item.pointer.alerts
                    i.bell.icon
                    if alerts
                        |#{alerts.count}
                .item.pointer.me
                    |#{currentUser.points} pts
                .item.pointer.me
                    |#{currentUser.karma} 
                    i.user.shield.icon
                .item.pointer.me
                    |#{currentUser.username}
                    [#{currentUser.status}]
                .icon.item.leave.pointer(title='leave')
                    i.power.off.icon
            else
                .icon.item.enter.pointer(title='enter')
                    i.right.chevron.icon
    +sessions

template(name='sessions')
    .new_session.ui.icon.button.pointer(title='new session')
        i.plus.icon
    each sessions
        .ui.label.select_session.pointer(class=session_selector_class)
            |#{title}
            i.remove.link.delete_delta.circular.icon


template(name='footer')
    .ui.bottom.fixed.large.menu
        .item
            +ad
        .icon.item
            i.dashboard.icon
        .icon.item
            i.chat.icon
        .icon.item
            i.tasks.icon
        .icon.item
            i.mail.icon
        .icon.item
            i.cog.icon
        .icon.item
            i.user.icon
        if currentUser
            .ui.left.icon.transparent.input
                i.plus.icon
                input#quick_add(type='text' autocomplete="off" placeholder='quick add')
        .right.menu
            form(action='https://www.paypal.com/cgi-bin/webscr', method='post', target='_top')
                input(type='hidden', name='cmd', value='_s-xclick')
                input(type='hidden', name='hosted_button_id', value='AUVHGYNUW5LVE')
                // input(type='image', src='https://www.paypalobjects.com/en_US/i/btn/btn_donate_SM.gif', border='0', name='submit')
                img(alt='', border='0', src='https://www.paypal.com/en_US/i/scr/pixel.gif', width='1', height='1')
                button.ui.basic.icon.black.button(type='submit' title='donate')
                    i.coffee.icon



template(name='layout')
    +nav
    #main
        +Template.dynamic template=main_template
    +footer
    
template(name='delta')    
    .ui.stackable.grid
        .row   
            .six.wide.column.scrolling
                each delta.facets
                    +facet
            .ten.wide.column.scrolling
                each delta.result_ids
                    +result
                
                    
template(name='result')
    with result 
        .ui.segment
            .content
                .f8 #{nl2br body}
                // .ui.form
                //     .field
                //         textarea(rows='3') #{body}
            .content
                each tags
                    .ui.label
                        // i.remove.link.icon.remove_tag
                        |#{this}
                .ui.small.header #{when}
                +voting
                +bookmark_button
                +view_button
                +clone_button
                if can_edit
                    +edit_button
                    .ui.icon.button.remove_doc
                        i.remove.icon
                    .ui.left.icon.input
                        i.grey.tag.icon
                        input.new_tag(type='text')

template(name='facet')
    .ui.accordion
        .active.title
            i.dropdown.icon
            .ui.small.inline.header #{key}
            // each filters
            //     .unselect.ui.blue.button #{this}
        .active.content
            .ui.transparent.left.icon.input
                i.search.icon
                input.add_filter(type='text' placeholder='search')
            each filtering_res
                if name
                    .selector.ui.button.toggle_selection(class=toggle_value_class title=count)
                        strong #{name}
                        small #{count}
                else
                    .selector.ui.button.toggle_selection(class=toggle_value_class title=count)
                        strong [null]
                        small #{count}
    
    

                        
                        
template(name='ad')
    |show the shadow
