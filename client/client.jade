template(name='not_found')
    // +topnav
    .ui.center.aligned.basic.segment
        .ui.header not found
        a.ui.icon.button(href='/')
            i.home.icon
        
        
template(name='layout')
    .layout.context
        +topnav
        .ui.bottom.attached.basic.segment.pushable
            +topbar
            +leftbar
            +rightbar
            .pusher
                #main
                    +yield
        +footer






template(name='home')
    .ui.padded.stackable.grid
        .centered.row
            .two.wide.column
                a.ui.icon.button(href="/t/#{current_tribe.slug}/s/tribe/#{current_tribe._id}/edit")
                    i.cog.icon
            .ten.wide.column
                img.ui.large.inline.image(src="{{c.url current_tribe.logo_id height=400 crop='limit'}}")
                .ui.center.aligned.large.header #{current_tribe.title}
                .ui.center.aligned.small.header #{current_tribe.subtitle}
        .centered.row
            .eight.wide.column
                .ui.header
                    i.users.icon 
                    |Users
            .eight.wide.column
                .ui.header
                    i.clone.icon 
                    |Pages
            
            


template(name='footer')
    .ui.inverted.bottom.fixed.menu(style="background:#{current_tribe.secondary_color}")
        .item
            i.copyright.outline.icon
            |#{current_tribe.title}
        .item    
            |#{current_tribe.footer}
        .right.menu
            a.item(href='/')
                |DAO
            
