template(name='view')
    with doc
        .ui.stackable.padded.grid
            .four.wide.column
                .ui.segment
                    +author_info
                    +creation_info
                    a.ui.fluid.button(href="/edit/#{_id}")
                        i.pencil.icon
                .ui.segment
                    .ui.button
                        i.fork.icon
                        |clone
                    .ui.button
                        i.dna.icon
                        |detect fields
            .twelve.wide.column
                each _keys
                    +field_view


template(name='field_view')
    .item   
        .content
            .header #{this}
            .description
                +Template.dynamic template=brick_view