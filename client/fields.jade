template(name='field')
    .ui.secondary.segment
        with field_object
            .ui.form
                .field
                    .two.fields
                        .field
                            label Label
                            input.label(type='text' value=label)
                        .field
                            label Key
                            input.key(type='text' value=key)
                .field
                    label Field Type
                    +set_field_key_value key='field_type' value='array'
                    +set_field_key_value key='field_type' value='string'
                    +set_field_key_value key='field_type' value='boolean'
                    +set_field_key_value key='field_type' value='number'
                    +set_field_key_value key='field_type' value='html'
                    +set_field_key_value key='field_type' value='markdown'
                    +set_field_key_value key='field_type' value='html'
                    +set_field_key_value key='field_type' value='html'
                    +set_field_key_value key='field_type' value='html'
                    +set_field_key_value key='field_type' value='html'
                .field
                    +Template.dynamic template=field_edit_template
                .field
                    label Value
                    input.value(type='text' value=field_value)
                .field
                    .ui.icon.button.delete_field
                        i.remove.icon




        
template(name='view_text')
    h4.ui.header #{title}: #{key_value}

        
template(name='html_edit')
    #toolbar
    .editor
        
        

template(name='boolean_edit')
    .ui.button.toggle_field(class=bool_switch_class title=key)
        if icon
            i.icon
                +icon name=icon
        |#{title}


template(name='array_edit')
    .ui.fluid.labeled.right.icon.input
        .ui.basic.label
            if icon
                +icon name=icon classes='inline spaced'
            |#{title}
        input.add_array_element(type='text' placholder='add')
        i.plus.icon
    if value
        each value
            .ui.large.basic.label
                i.pull_element.remove.link.icon
                |#{this}




template(name='multiref_edit')
    div
    .ui.basic.large.label
        if icon
            i.icon(class=) name=icon classes
        |#{title}        
    each choices
        .ui.button.toggle_ref(class=ref_class)
            if icon
                i.icon(class=icon)
            |#{title}



template(name='ref_edit')
    .ui.basic.label
        if icon
            +icon name=icon classes='inline spaced'
        |#{title}
    each choices
        .ui.button.choose_element(class=element_class)
            if icon
                i.icon
                    +icon name=icon
            |#{title}


