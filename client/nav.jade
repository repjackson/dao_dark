template(name='nav')
    .ui.basic.center.aligned.segment
        a.icon.ui.button(href='/')
            i.home.icon
        a.icon.ui.button(href='/people')
            i.users.icon
        a.header.ui.large.button.invert(href='#')
            if dark_side
                .black_bat.logo DAO
            else
                .ui.header DAO
        a.ui.button(href='/dash')
            i.dashboard.icon
        if currentUser
            a.icon.ui.button.add_doc(href='#')
                i.plus.icon
            a.icon.ui.button(href='#')
                i.bell.icon
            a.ui.button(href='/me')
                i.user.icon
                |#{currentUser.username}
            a.ui.button.logout(href='#')
                i.sign.out.icon
        else
            a.ui.button(href='/enter')
                i.sign.in.icon
                    
                    
