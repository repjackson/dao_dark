template(name='nav')
    .ui.inverted.attached.big.borderless.menu(class=my_tribe.color)
        if my_tribe
            .item
                |#{my_tribe.title}
        else
            a.icon.item.dash(href='#')
                .black_bat.font_150 DAO
        .right.menu
            if currentUser
                a.icon.item.add_doc
                    i.plus.icon
                a.icon.item.crm(href='#')
                    i.users.icon
                a.icon.item.schemas(href='#')
                    i.database.icon
                a.icon.item.inbox(href='#')
                    i.inbox.icon
                a.icon.item.alerts(href='#')
                    i.bell.icon
            if currentUser
                a.item.profile(href='#')
                    i.user.icon
                    | #{currentUser.username}
                a.icon.item.logout(href='#')
                    i.sign.out.alternate.icon
            else
                .icon.item
                    i.sign.in.alternate.icon
   
   
template(name='sessions')   
    .ui.inverted.grey.attached.large.menu
        a.icon.item.create_delta(href='#')
            i.plus.icon
        each my_deltas
            a.item.select_delta(class=session_item_class)
                if icon
                    i.icon(class=icon)
                |#{title}
   
   
   
template(name='history')   
    .ui.header History
    .ui.breadcrumb
        a.section Home
        .divider  / 
        a.section Store
        .divider  / 
        .active.section T-Shirt


