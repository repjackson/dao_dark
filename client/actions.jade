template(name='notify_button')
    if currentUser
        .ui.header
            +icon name='appointment-reminders'
            |Notify Someone
        // .ui.fluid.input
        //     +inputAutocomplete settings=recipient_select_settings id="recipient_select" class="" autocomplete="off" placeholder='Lookup...'
    .ui.list
        each notified_users
            .item
                img.ui.avatar.image(src="{{c.url profile.image_id width=100 height=100 gravity='face' crop='fill'}}")
                .content
                    .header #{name}
                    .meta #{username}
                .right.floated.content
                    i.remove_notified_user.large.link.red.remove.icon

template(name='checkin')
    unless healthclub_checkedin
        .ui.circular.button.checkin(title='Check In')
            // i.sign.in.icon
            +icolor name='login-rounded-right' classes='ui avatar image'
            |Sign In to Health Club
    if healthclub_checkedin
        .ui.circular.button.checkout(title='Sign Out')
            // i.sign.out.large.icon
            +icolor name='exit-sign' classes='ui avatar image'
            |Sign Out from Health Club
    +rules_sign
    +guest_sign
    .ui.accordion
        .title
            .ui.inline.small.header
                |Events
                i.dropdown.icon
        .content
            .ui.feed
                each log_events
                    .event
                        .label
                            img.ui.image(src="{{c.url object.profile.image_id width=400 height=400 gravity='face' crop='fill'}}")
                        .content
                            .summary
                                |#{body}
                                .date
                                    |#{when}
                                if is_dev
                                    +remove_button


