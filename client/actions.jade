template(name='rules_sign')
    if rules_signed
        .ui.circular.compact.green.small.button.view_rules
            +icolor name='autograph' classes='ui avatar image'
            | View Signed Rule Doc
    else
        .ui.circular.compact.red.button.sign_rules
            +icolor name='alert' classes='ui avatar image'
            | Sign Rules
        
        
template(name='guest_sign')
    .ui.circular.compact.button.enter_guest
        +icolor name='add-user-group-man-man' classes='ui avatar image'
        | Sign In a Guest
        
        
template(name='view_user')
    a.ui.view_user.icon.button(href="/u/#{username}" title="View User")
        |View #{username}



template(name='send_message')
    if sent
        |Sent at #{sent_datetime}
    unless sent
        .ui.button.send_message 
            i.paper.plane.icon
            |Send Message



