template(name='calendar')
    .ui.stackable.padded.grid
        .four.wide.column
            .ui.inverted.header calendar
            .ui.icon.button.add_entry
                i.plus.icon
        .twelve.wide.column
            each events
                +event
                    
template(name='event')
    .ui.fluid.card
        .content
            .ui.form
                +title
                +description
                +tags
        .content
            +edit_button
            +author_info
            +creation_info
            