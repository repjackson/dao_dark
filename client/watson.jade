template(name='keywords')
    .ui.header 
        |#{watson.keywords.length} keywords
    .ui.four.stackable.cards
        each watson.keywords
            .ui.card
                .content
                    h4
                        |#{text}
                    .meta
                        |{{ to_percent relevance }}% relevant
                    .meta
                        |sentiment: {{ to_percent sentiment.score }}%
                    .description
                        with emotion
                            .ui.list
                                .ui.blue.tiny.disabled.progress(data-percent=sadness_percent title="{{to_percent sadness}}% sadness")
                                    .bar
                                    .progress
                                div {{ to_percent sadness }}% sadness
                                .ui.green.tiny.disabled.progress(data-percent=joy_percent title="{{to_percent joy}}% joy")
                                    .bar
                                    .progress
                                div {{ to_percent joy }}% joy 
                                .ui.black.tiny.disabled.progress(data-percent=fear_percent title="{{to_percent fear}}% fear")
                                    .bar
                                    .progress
                                div {{ to_percent fear }}% fear
                                .ui.yellow.tiny.disabled.progress(data-percent=disgust_percent title="{{to_percent joy}}% joy")
                                    .bar
                                    .progress
                                div {{ to_percent disgust }}% disgust 
                                .ui.red.tiny.disabled.progress(data-percent=anger_percent title="{{to_percent joy}}% joy")
                                    .bar
                                    .progress
                                div {{ to_percent anger }}% anger 


