template(name='tribe_layout')
    .layout.context
        +tribe_nav
        .ui.bottom.attached.basic.segment.pushable
            // +topbar
            // +leftbar
            // +rightbar
            .pusher
                #main
                    +yield
            +tribe_footer




template(name='tribe_nav')
    .ui.attached.borderless.large.inverted.topnav.menu()
        a.item.toggle_leftbar(href='#')
            i.bars.icon
        a.item(href="/#{tribe.slug}" class="{{isActivePath '/'}}")
            |#{tribe.title}
        if is_loading
            .icon.item
                i.loading.refresh.icon
        // a.item.toggle_invert(href='#')
        //     i.adjust.icon
        .right.menu
            if currentUser
                a.item.add(href='#')
                    i.link.plus.icon
                a.item.toggle_topbar(href='#')
                    i.inbox.icon
                a.item(href='/chat')
                    i.chat.icon
                // a.item.set_schema(href='/s/schema')
                //     i.tribemap.icon
                a.item(href='/people' class="{{isActivePath '/people'}}")
                    i.users.icon
                a.icon.item(href="/u/#{currentUser._id}/edit")
                    i.cog.icon
                a.item(href="/u/#{currentUser._id}/about")
                    i.user.icon
                    | #{currentUser.username} [#{currentUser.status}]
                a.item.toggle_rightbar(href='#')
                    i.bars.icon
            else
                a.item(href="/signin")
                    i.sign.in.alternate.icon
                    |Sign In 
                a.item(href="/register")
                    i.user.plus.icon
                    |Register 
    // if currentUser
    .ui.attached.borderless.large.inverted.menu.topnav
        each topnav_schemas
            a.item.mobile_hidden.set_schema(href="/s/#{slug}" class="{{isActiveRoute regex=slug}}" title=title)
                i.icon(class=icon)
                |#{plural}


template(name='tribe_home')
    .ui.header #{tribe.title}


template(name='tribe_footer')
    .ui.inverted.menu
        .item
            i.copyright.outline.icon
            .black_bat DAO
        if is_dev
            .item.refresh_stat
                i.link.refresh.icon
        with site_stat
            .item
                |#{doc_count} docs
                |#{user_count} users
        .item
            | stand up and fight
