template(name='user_connections')
    .ui.header 
        i.tasks.icon
        | Connections
    .ui.header Connections
    each connections
        +user_segment
    .ui.header Nonconnections    
    each nonconnections
        +user_segment


template(name='user_segment')
    .ui.segment
        .ui.padded.stackable.grid
            .four.wide.column
                if image_id
                    img.ui.small.image(src="{{c.url image_id }}")
                else if profile.image_id
                    img.ui.small.image(src="{{c.url profile.image_id }}")
            .eight.wide.column
                a.ui.header(href="/u/#{username}")
                    |#{first_name}
                    |#{last_name}
                a.ui.small.header(href="/u/#{username}")
                    @#{username}
            .four.wide.column
                .ui.inline.small.grey.header
                    i.tags.icon
                each tags
                    .ui.label #{this}
                +user_status user
                .ui.header #{body}
                +user_connect_button

template(name='user_connect_button')
    if is_connected
        .ui.blue.button.disconnect
            |Connected
    else
        .ui.button.connect
            |Connect
