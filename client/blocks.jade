template(name='toggle_friend')
    if is_friend
        .ui.grey.animated.fade.circular.button.remove_friend
            .visible.content
                |Friends
            .hidden.content
                i.minus.icon
    else
        .ui.circular.button.circular.button.add_friend
            |+ Friend
        



