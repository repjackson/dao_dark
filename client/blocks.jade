template(name='voting')
    div
    if points
        strong #{points}
    .ui.icon.circular.large.button.upvote
        i.thumbs.up.large.icon(class=upvote_class)
    each upvoter_ids
        +user_info
    .ui.icon.circular.large.button.downvote
        i.thumbs.down.large.icon(class=downvote_class)
    each downvoter_ids
        +user_info



