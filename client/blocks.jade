template(name='user_info')
    a.ui.label(href="/t/goldrun/u/#{user._id}/about")
        if user.profile.image_id
            img.ui.mini.image(src="{{c.url user.profile.image_id }}")
        if user.name
            |#{user.name}
        |@#{user.username}
        +user_status user


