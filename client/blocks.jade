template(name='comments')
    .ui.fluid.icon.input
        i.chat.icon
        input.add_comment(type='text' placeholder='comment')
    .ui.comments
        each doc_comments
            .comment
                .content
                    .header #{body}
                    .meta #{when}
                    +voting


template(name='user_info')
    |#{user.username}
    
    
template(name='role_editor')
    each roles
        .ui.button #{this}
        
template(name='author_info')
    .ui.header #{author.username}
    
template(name='creation_info')
    .ui.header #{when}
    
    

template(name='view_user_button')
    .ui.icon.view_user.button.view(title="view #{username}")
        i.play.icon
        
        
template(name='add_type_button')
    .ui.icon.button.add(title="add #{type}")
        i.plus.icon
        

template(name='bookmark_button')
    .ui.icon.bookmark.button(title='bookmark')
        i.bookmark.outline.icon
    each bookmarkers
        |#{username}
        

template(name='clone_button')
    .ui.icon.button(title='clone')
        i.fork.icon


template(name='detect_fields_button')
    .ui.button.detect_fields(title='detect fields')
        i.dna.icon
        |detect fields 
        
        
template(name='voting')
    if points
        strong #{points} points
    div
    .ui.large.icon.button.upvote
        i.thumbs.up.icon(class=upvote_class)
    each upvoter_ids
        +user_info
    div
    .ui.large.icon.button.downvote
        i.thumbs.down.icon(class=downvote_class)
    each downvoter_ids
        +user_info
    div
        

            