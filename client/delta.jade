template(name='delta_card')
    with local_doc
        .ui.fluid.link.card.delta_card(class=delta_card_class)
            // if doc_header_fields
            .content
                h3.ui.header
                    if icon
                        +icon name=icon
                    |#{title}
                    each doc_header_fields
                        |#{value}
            if delta_doc.view_full
                .content
                    p
                    .ui.list
                        each field_docs
                            if value
                                .item
                                    if field_template
                                        +Template.dynamic template=field_template
                                    else
                                        .content
                                            if icon
                                                i.large.icon
                                                    +icon name=icon
                                            | #{title}
                                            |&nbsp;
                                            if is_array
                                                each value
                                                    .ui.basic.label #{this}
                                            else
                                                strong #{value}


