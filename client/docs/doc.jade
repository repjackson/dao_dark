template(name='doc_card')        
    if youtube
        +view_youtube
    if image_url
        .ui.image
            img(src=image_url)
    .ui.inverted.segment
        if parent_id
            +parent_doc_segment
        if content
            .ui.basic.inverted.segment
                .large-text !{content}
        each tags 
            .doc_tag.ui.small.compact.inverted.black.basic.button(class=tag_class) #{this}
        div 
            +author_info
            |#{when}
        if currentUser
            +vote_button
            if upvoted_users
                +upvoted_list
        if is_author
            a.ui.icon.button(href="/edit/#{_id}")
                i.pencil.icon
        +view_full_button
            
            
template(name='vote_button')
    .ui.icon.button.vote_up
        i.thumbs.up.link.icon(class=vote_up_button_class)
    .ui.icon.button.vote_down
        i.thumbs.down.link.icon(class=vote_down_button_class)
    |#{points}
        
            
                    
template(name='view_full_button')
    a.ui.icon.button(href="/v/#{_id}")
        i.right.arrow.icon
                        
                    
template(name='view_youtube')
    .ui.embed(data-source="youtube" data-id=youtube)


template(name='view_doc')        
    with doc
        .ui.stackable.grid
            .twelve.wide.column
                if youtube
                    +view_youtube
                if image_url
                    .ui.image
                        img(src=image_url)
            
                .ui.inverted.segment
                    .content
                        if title
                            h1.ui.center.aligned.header #{title}
                        if slug
                            h4.ui.center.aligned.header #{slug}
                        if content
                            .large-text !{content}
                        each tags 
                            .doc_tag.ui.small.compact.button(class=tag_class) #{this}
                +threaded_children
                +ownership
                if watson
                    .ui.inverted.segment
                        +analyzed_watson_keywords
            .four.wide.column
                .ui.inverted.segment
                    if parent_id
                        +parent_link
                    .content
                        // +author_info
                        if is_author
                            a.ui.icon.button(href="/edit/#{_id}")
                                i.pencil.icon
                    if watson
                        +doc_emotion
                    else
                        +call_watson
                    +add_child_button
                    if currentUser
                        +vote_button
                    +upvoted_list
                +crowd_tags
            
            
            
            
