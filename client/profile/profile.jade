template(name='user_layout')
    +nav
    .ui.stackable.grid
        .centered.row
            .two.wide.column
                with person
                    img.ui.small.centered.rounded.image(src="{{c.url profile.image_id width=400 height=400 gravity='face' crop='fill'}}")
                    .ui.center.aligned.inverted.header
                        if profile.first_name
                            |#{profile.first_name} #{profile.last_name}
                        |#{username}
                        // unless is_user
                        // +staus_indicator
                    if is_user
                        .ui.vertical.inverted.labeled.icon.fluid.menu
                            a.item(href="/profile/edit/#{_id}" class="{{isActiveRoute 'edit_profile'}}") 
                                i.pencil.icon
                            a.item(href="/u/#{username}/settings/" class="{{isActiveRoute 'account_settings'}}")
                                i.settings.icon
                                // |settings
                    .ui.vertical.inverted.labeled.icon.fluid.menu
                        a.item(href="/u/#{username}/dashboard/" class="{{isActiveRoute 'user_dashboard'}}")
                            i.dashboard.icon
                            // |dashboard
                        a.item(href="/u/#{username}" class="{{isActiveRoute 'user_info'}}")
                            i.info.icon
                            // |info
                        a.item(href="/u/#{username}/documents"  class="{{isActiveRoute 'user_docs'}}")
                            i.book.icon
                            // |docs
                        a.item(href="/u/#{username}/contact" class="{{isActiveRoute 'user_contact'}}")
                            i.phone.icon
                            // |contact
                        a.item(href="/u/#{username}/comparison"  class="{{isActiveRoute 'user_comparison'}}")
                            i.fork.icon
                            // |compare
                        a.item(href="/u/#{username}/conversations" class="{{isActiveRoute 'user_conversations'}}")
                            i.comments.icon
                            // |conversations
                        a.item(href="/u/#{username}/karma" class="{{isActiveRoute 'user_karma'}}")
                            i.heart.icon
                            // |karma
                        a.item(href="/u/#{username}/social" class="{{isActiveRoute 'user_social'}}")
                            i.users.icon
                            // |social
                        a.item(href="/u/#{username}/transactions" class="{{isActiveRoute 'user_transactions'}}")
                            i.money.icon
                            // |transactions
                if is_user
                    .ui.basic.center.aligned.segment
                        #logout.ui.center.aligned.button log out
            .ui.fourteen.wide.column
                +Template.dynamic template=user_main


