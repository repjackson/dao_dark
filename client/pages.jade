template(name='health_club_dashboard')
    .ui.stackable.padded.grid
        .row
            .eight.wide.column
                .row
                    .ui.header
                        // +icolor name='internal' classes='ui image'
                        i.sign.in.icon
                        |Checked In Members
                    .ui.stackable.four.cards
                        each checkedin_members
                            .ui.card
                                a(href="/t/goldrun/u/#{_id}/about")
                                    img.ui.image(src="{{c.url profile.image_id width=400 height=400 gravity='face' crop='fill'}}")
                                    img.ui.image(src="{{c.url image_id width=400 height=400 gravity='face' crop='fill'}}")
                                .content
                                    a(href="/t/goldrun/u/#{_id}/about")
                                        .header #{first_name} #{last_name}
                                    a.meta(href="/t/goldrun/u/#{_id}/about") #{username}
                                    .ui.header Apt # #{apt_number}
                                    .ui.header Building #{building}

                                .ui.fluid.button.checkout(title='Sign Out')
                                    i.sign.out.large.icon
                                    |Sign Out
                                if signed_waiver
                                    .ui.fluid.green.basic.button
                                        i.checkmark.icon
                                        |Waiver Signed
                                else
                                    .ui.fluid.red.button.sign_waiver
                                        i.cancel.icon
                                        |Waiver Not Signed
                    .ui.divider
                    .ui.header
                        // +icolor name='external' classes='ui image'
                        i.sign.out.icon
                        |Checked Out Members
                    .ui.fluid.icon.input
                        i.search.icon
                        input.username_search(type='text' placeholder='Search Username...')
                    .ui.stackable.four.cards
                        each checkedout_members
                            .ui.card
                                a(href="/t/goldrun/u/#{_id}/about")
                                    img.ui.image(src="{{c.url profile.image_id width=400 height=400 gravity='face' crop='fill'}}")
                                .content
                                    a.header(href="/t/goldrun/u/#{_id}/about")
                                        |#{profile.first_name} #{profile.last_name}
                                    .meta #{username}
                                    .ui.header Apt # #{apt_number}
                                    .ui.header Building #{building}
                                .ui.fluid.button.checkin(title='Check In')
                                    i.sign.in.icon
                                    |Sign In
            .four.wide.column.scrolling
                a.ui.large.fluid.button(href='/t/goldrun/add_resident')
                    i.user.plus.green.icon
                    |Add Resident
                .ui.accordion
                    h4.active.title
                        +icolor name='edit-property' classes='ui inline image'
                            .ui.inline.dividing.header 
                        i.dropdown.icon
                        | Log
                    .active.content
                        .ui.feed
                            each events
                                .event
                                    .label
                                        img.ui.image(src="{{c.url object.profile.image_id width=400 height=400 gravity='face' crop='fill'}}")
                                    .content
                                        .summary
                                            |#{body}
                                            .date
                                                |#{when}
                                    if is_dev
                                        +remove_button
                .ui.accordion
                    h4.active.title
                        +icolor name='megaphone' classes='ui inline image'
                        |Notices
                        i.dropdown.icon
                    .active.content
                .ui.accordion
                    .active.title
                        +icolor name='car' classes='ui inline image'
                        | Warned Cars
                        i.dropdown.icon
                    .active.content
                .ui.accordion
                    .active.title
                        +icolor name='poll-topic' classes='ui inline image'
                        |Poll
                        i.dropdown.icon
                    .active.content
                .ui.accordion
                    .active.title
                        +icolor name='front-desk' classes='ui inline image'
                        | Staff On Duty
                        i.dropdown.icon
                    .active.content
                        with currentUser
                            .ui.card
                                img.ui.image(src="{{c.url profile.image_id }}")
                                .content
                                    .header #{username}
            .four.wide.column.scrolling
                .ui.accordion
