template(name='karma')
    .ui.header karma
    .ui.header my karma #{currentUser.karma}
    
    .ui.header 
        i.cart.icon
        | marketplace
    each products
        .ui.segment
            .ui.header #{title}
            
            
template(name='mail')
    .ui.header 
        i.mail.icon
        |mail
    .ui.header my messages #{currentUser.karma}
    
template(name='alerts')
    .ui.header 
        i.bell.icon
        |alerts
    .ui.header my messages #{currentUser.karma}
    
            
