template(name='edit')
    with doc
        .ui.stackable.grid
            .ten.wide.column
                .ui.form
                    .field
                        .ui.header #{type}
                    +youtube_edit
                    .field
                        label body
                        textarea.edit_body(rows='20') #{body}
            .six.wide.column
                .ui.header edit #{type} #{title}
                .ui.form
                    .field
                        label tags
                        each tags
                            .ui.large.label 
                                i.remove.link.icon.remove_tag
                                |#{this}
                        .ui.icon.input
                            input.new_tag(type='text' placeholder='add tag')
                            i.plus.icon
                .ui.button.print log
                +save_button
                    
                    
template(name='field_edit')
    .ui.segment
        .ui.labeled.input
            .ui.label name: #{key}
            input.change_key(type='text' placeholder='key' value=key)
        .ui.icon.button.remove_field
            i.remove.icon
        div
        +Template.dynamic template=brick_edit
        


template(name='view')  
    with doc
        .ui.grid
            .row
                .ten.wide.column
                    if youtube_id
                        +youtube_view
                    .ui.basic.segment
                        .f8 #{body}
                    each tags
                        .ui.large.label #{this}
                    +comments
        
                .six.wide.column
                    +author_info
                    +voting
                    +creation_info
                    +edit_button
                    +bookmark_button
                    +ownership


template(name='field_view')
    .item   
        .content
            .header #{this}
            .description
                +Template.dynamic template=brick_view