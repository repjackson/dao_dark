head
    title DAO
    meta(name='viewport', content='user-scalable=no, initial-scale=1.0, maximum-scale=1.0, width=device-width')
    meta(name="theme-color", content="#ffffff")
    link(rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Ubuntu")
    // link(href="//cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet")



body
    +home

            


template(name='home')
    .ui.stackable.padded.celled.grid
        if currentUser
            .center.aligned.black.row(class=my_tribe.color)
                .eight.wide.column.create_delta.pointer
                    if in_dao
                        i.home.icon
                        // .black_bat.font_200 DAO
                    else
                        |#{my_tribe.title}
                if currentUser
                    .two.wide.column.karma.pointer
                        | #{currentUser.karma} karma
                    .two.wide.column.profile.pointer
                        i.user.icon
                        | #{currentUser.username}
                    .one.wide.column.logout.pointer
                        i.sign.out.alternate.icon
                else
                    .four.wide.column
                        i.sign.in.alternate.icon
            // .centered.grey.row
            //     each tribe_modules
            //         .ui.button.select_module
            //             i.icon(class=icon)
            //             |#{title}
            //         // .two.wide.column.select_module.pointer
            if currentUser
                +Template.dynamic template=currentUser.current_template
        else
            .black.row
                .twelve.wide.column
                    +login