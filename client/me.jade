template(name='me')
    .ui.stackable.padded.grid
        .centered.row
            .four.wide.column
                .ui.grey.header #{currentUser.username}
            .ten.wide.column
                .ui.icon.input
                    input.new_username(type='text' placeholder='change username')
                    i.play.link.icon.change_username
                .ui.small.grey.header change password
                .ui.input
                    input.old_password(type='text' placeholder='old')
                .ui.icon.input
                    input.new_password(type='text' placeholder='new')
                    i.play.link.icon.change_password
                .three.wide.column
                    .ui.grey.header
                        |karma
                    |#{currentUser.karma}
                    .ui.grey.header
                        |points
                    |#{currentUser.points}
                .ui.segment
                    .ui.grey.header 
                        i.bell.icon
                        |alerts
                .ui.segment
                    .ui.grey.header
                        i.user.shield.icon
                        | roles
                    .ui.list
                        each currentUser.roles
                            .item #{this}
                .ui.segment
                    .ui.grey.header 
                        i.users.icon
                        | friends
                    .ui.list
                        each currentUser.friends
                            .item #{this}
                .ui.button.logout_others
                    i.user.times.icon
                    |logout other clients
                .ui.button.logout
                    i.sign.out.alternate
                    |logout