template(name='facet')
    .ui.header
        |#{key}
    each selected_values
        .ui.active.button.unselect
            |#{this}
    each values
        +selector


template(name='selector')
    .ui.select.button(class=toggle_value_class)
        |#{name}
        small #{count}
