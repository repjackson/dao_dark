
template(name='view_doc')        
    with doc

        .ui.stackable.grid
            .eleven.wide.column
                if template
                    +Template.dynamic template=view_template
                else
                    if youtube
                        +view_youtube
                    if image_url
                        .ui.image
                            img(src=image_url)
                
                    +threaded_children
                    // +doc_matches
                    if watson
                        .ui.inverted.segment
                            +analyzed_watson_keywords
                .ui.inverted.segment
                    .content
                        if title
                            h1.ui.center.aligned.header #{title}
                        if slug
                            h4.ui.center.aligned.header #{slug}
                        if content
                            .large-text !{content}
            .five.wide.column
                .ui.inverted.segment
                    +author_info
                    .ui.header #{when}
                    if is_author
                        a.ui.icon.button(href="/edit/#{_id}")
                            i.pencil.icon

                if tags
                    .ui.inverted.segment
                        .ui.header author tags
                        each tags 
                            .doc_tag.ui.small.compact.button(class=tag_class) #{this}
                if template
                    .ui.inverted.segment
                        .ui.header template: #{template}
                .ui.inverted.segment
                    if parent_id
                        +parent_link
                    // if watson
                    //     +doc_emotion
                    // else
                    //     +call_watson
                    +add_child_button
                    if currentUser
                        div
                            +vote_button
                    +upvoted_list
                +crowd_tags
                +ownership
            
            
            
            
